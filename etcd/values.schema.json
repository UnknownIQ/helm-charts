{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of etcd replicas (must be odd: 1, 3, 5, 7, etc.)"
    },
    "revisionHistoryLimit": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of old ReplicaSets to retain"
    },
    "image": {
      "type": "object",
      "properties": {
        "registry": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "automount": {
          "type": "boolean"
        },
        "annotations": {
          "type": "object"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer"
        },
        "runAsGroup": {
          "type": "integer"
        },
        "fsGroup": {
          "type": "integer"
        },
        "fsGroupChangePolicy": {
          "type": "string",
          "enum": ["OnRootMismatch", "Always"]
        }
      }
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "clientPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "peerPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "etcd": {
      "type": "object",
      "properties": {
        "initialClusterToken": {
          "type": "string"
        },
        "autoCompactionMode": {
          "type": "string",
          "enum": ["periodic", "revision"]
        },
        "autoCompactionRetention": {
          "type": "string"
        },
        "snapshotCount": {
          "type": "integer",
          "minimum": 1
        },
        "quotaBackendBytes": {
          "type": "string"
        },
        "heartbeatInterval": {
          "type": "integer",
          "minimum": 1
        },
        "electionTimeout": {
          "type": "integer",
          "minimum": 1
        },
        "initialClusterState": {
          "type": "string",
          "enum": ["new", "existing"]
        },
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error", "panic", "fatal"]
        }
      }
    },
    "tls": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "client": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string"
            },
            "certFilename": {
              "type": "string"
            },
            "keyFilename": {
              "type": "string"
            },
            "caFilename": {
              "type": "string"
            }
          }
        },
        "peer": {
          "type": "object",
          "properties": {
            "existingSecret": {
              "type": "string"
            },
            "certFilename": {
              "type": "string"
            },
            "keyFilename": {
              "type": "string"
            },
            "caFilename": {
              "type": "string"
            }
          }
        }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "rootPassword": {
          "type": "string"
        },
        "existingSecret": {
          "type": "string"
        }
      }
    },
    "backup": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "schedule": {
          "type": "string"
        },
        "retention": {
          "type": "object",
          "properties": {
            "days": {
              "type": "integer",
              "minimum": 0
            },
            "weeks": {
              "type": "integer",
              "minimum": 0
            },
            "months": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "s3": {
          "type": "object",
          "properties": {
            "bucket": {
              "type": "string"
            },
            "prefix": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "endpoint": {
              "type": "string"
            },
            "accessKey": {
              "type": "string"
            },
            "secretKey": {
              "type": "string"
            },
            "existingSecret": {
              "type": "string"
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "defrag": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "schedule": {
          "type": "string"
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string"
                },
                "memory": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "storageClass": {
          "type": "string"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"]
        },
        "size": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "minAvailable": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "interval": {
          "type": "string"
        },
        "scrapeTimeout": {
          "type": "string"
        },
        "labels": {
          "type": "object"
        },
        "honorLabels": {
          "type": "boolean"
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "ingress": {
          "type": "array"
        },
        "egress": {
          "type": "array"
        },
        "egressDNS": {
          "type": "boolean"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string"
            },
            "memory": {
              "type": "string"
            }
          }
        }
      }
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "affinity": {
      "type": "object"
    },
    "podAnnotations": {
      "type": "object"
    },
    "podLabels": {
      "type": "object"
    }
  }
}
